{% extends 'cms/layout.twig' %}

{% block title %}Rediger Fag{% endblock %}

{% block content %}
    <main class="container-fluid cms-main">
        <div class="container w-25 m-auto">

            <form action="#" class="pb-5">

                <div class="form-group">
                    <label for="courseNo">Fag nr.</label>
                    <input class="form-control" type="number" placeholder="8291" id="courseNo"
                           value="{{ course.course_no }}">
                </div>

                <div class="form-group">
                    <label for="courseName">Navn</label>
                    <input class="form-control" type="text" maxlength="255"
                           placeholder="GrundlÃ¦ggende programmering" id="courseName" value="{{ course.name }}">
                </div>

                <div class="form-group">
                    <label for="courseSchoolAttnDesc">Skole ophold</label>
                    <textarea name="courseSchoolAttnDesc" id="courseSchoolAttnDesc" cols="30" rows="10"
                              class="form-control">{{ course.school_attendance_desc }}</textarea>
                </div>

                <div class="form-group">
                    <label for="courseInternAttnDesc">Praktik ophold</label>
                    <textarea name="courseInternAttnDesc" id="courseInternAttnDesc" cols="30" rows="10"
                              class="form-control">{{ course.internship_desc }}</textarea>
                </div>

                <button class="btn btn-primary" type="submit">Send</button>

            </form>

        </div>

    </main>

{% endblock %}