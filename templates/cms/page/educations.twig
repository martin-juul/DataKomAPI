{% extends 'cms/layout.twig' %}

{% block title %}Uddannelser{% endblock %}

{% block content %}
    <main class="container-fluid cms-main">
        <div class="container">
            <div class="jumbotron jumbotron-fluid m-auto text-center">
                <div class="container">
                    <h1 class="display-4">Uddannelser</h1>
                    <p class="lead">Her kan du administerer uddannelserne p√• siden.</p>
                    <hr class="my-4">
                    <a href="#" class="btn btn-primary">Opret</a>
                </div>
            </div>

            <div class="row mt-5">

                {% for education in educations %}
                    <div class="col-sm-4">
