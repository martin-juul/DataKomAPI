{% extends 'cms/layout.twig' %}

{% block title %}Log ind{% endblock %}

{% block content %}

    <div class="row mt-5">
        <div class="col-8 col-md-4 m-auto">
            <div class="card cms-shadow">
                <div class="card-body">
                    <h1 class="h3">Log ind</h1>
                    <hr>
                    <form action="{{ path_for('adminSignIn') }}" method="post"
                          class="offset-1 offset-md-2 col-10 col-md-8">
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input class="form-control" type="email" name="email" id="email"
                                   placeholder="bÃ¸rge@example.com" required>
                        </div>
                        <div class="form-group">
                            <label for="password">Kodeord</label>
                            <input class="form-control" type="password" name="password" id="password" minlength="6" required>
                        </div>
                        <input type="hidden" name="{{ csrf.keys.name }}" value="{{ csrf.name }}">
                        <input type="hidden" name="{{ csrf.keys.value }}" value="{{ csrf.value }}">
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Log ind</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}