{% extends 'cms/layout.twig' %}

{% block title %}Fag{% endblock %}

{% block content %}

    <main class="container-fluid cms-main">
        <div class="container pb-5">
            <div class="jumbotron jumbotron-fluid m-auto text-center">
                <div class="container">
                    <h1 class="display-4">Fag</h1>
                    <p class="lead">Her kan du administerer fagnene på siden.</p>
                    <hr class="my-4">
                    <a href="#" class="btn btn-primary">Opret</a>
                </div>
            </div>

            <div class="row mt-5">
                <table class="table table-striped table-bordered data-table">
                    <thead>
                    <tr>
                        <th scope="col">Fag nr.</th>
                        <th scope="col">Navn</th>
                        <th scope="col">Senest ændret</th>
                        <th scope="col">Oprettet</th>
                        <th scope="col"></th>
                    </tr>
                    </thead>
                    <tfoot>
                    <tr>
                        <th scope="col">Fag nr.</th>
                        <th scope="col">Navn</th>
                        <th scope="col">Senest ændret</th>
                        <th scope="col">Oprettet</th>
                        <th scope="col"></th>
                    </tr>
                    </tfoot>
                    <tbody>
                    {% for course in courses %}
                        <tr>
                            <td>{{ course.course_no }}</td>
                            <td>{{ course.name }}</td>
                            <td>{{ course.updated_at }}</td>
                            <td>{{ course.created_at }}</td>
                            <td>
                                <a href="{{ path_for('adminCourseEdit', {'courseId': course.id}) }}" class="btn btn-primary">Rediger</a>
                                <button href="#" class="btn btn-danger">Slet</button>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </main>

{% endblock %}